<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="net.junhabaek.cleanarchitectureentity.domain.Book" table="Book">
        <id name="id" type="java.lang.Long" column="book_id">
            <generator class="identity"/>
        </id>
        <property name="bookName" column="book_name" type="java.lang.String"/>
        <property name="authorName" column="author_name" type="java.lang.String"/>

        <component name="price" class="net.junhabaek.cleanarchitectureentity.domain.Money">
            <property name="amount" column="price" type="java.math.BigInteger" access="field"/>
        </component>

        <component name="page" class="net.junhabaek.cleanarchitectureentity.domain.Page">
            <property name="page" column="page" type="java.lang.Long" access="field"/>
        </component>

        <component name="quantity" class="net.junhabaek.cleanarchitectureentity.domain.Quantity">
            <property name="quantity" column="quantity" type="java.math.BigInteger" access="field"/>
        </component>
    </class>
</hibernate-mapping>
