<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="net.junhabaek.cleanarchitectureentity.domain.Book" table="Book">
        <id name="id" type="java.lang.Long" column="book_id" access="field">
            <generator class="identity"/>
        </id>
        <property name="bookName" column="book_name" type="java.lang.String" access="field"/>
        <property name="authorName" column="author_name" type="java.lang.String" access="field"/>

        <component name="price" class="net.junhabaek.cleanarchitectureentity.domain.Money" access="field">
            <property name="amount" column="price" type="java.math.BigInteger" access="field"/>
        </component>

        <component name="page" class="net.junhabaek.cleanarchitectureentity.domain.Page" access="field">
            <property name="page" column="page" type="java.lang.Long" access="field"/>
        </component>

        <component name="quantity" class="net.junhabaek.cleanarchitectureentity.domain.Quantity" access="field">
            <property name="quantity" column="quantity" type="java.math.BigInteger" access="field"/>
        </component>
        <many-to-one name="publisher" class="net.junhabaek.cleanarchitectureentity.domain.Publisher" lazy="proxy"
                     access="field"/>
    </class>
</hibernate-mapping>
